<!DOCTYPE html>
<html>
<head>
  <title>Auth2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="user_nav">
		<% if current_user %>
			Welcome <%= current_user.name %>
			<%= link_to "Sign_out", signout_path %>
			<% current_user.twitter.update("you are welcome") %>
		<% else %>
			<%= link_to "Sign in with Twitter", "/auth/twitter" %>
		<% end %>			
	</div>
	
<%= yield %>

</body>
</html>
